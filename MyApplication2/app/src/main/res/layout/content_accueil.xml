<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_accueil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.co.pickit_app.Accueil"
    tools:showIn="@layout/activity_accueil">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:src="@drawable/logo_transp"
        android:id="@+id/Image_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Image_logo"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:id="@+id/my_active_list"
        android:textColor="@color/colorText"
        android:text="@string/my_act_list" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textColor="@color/colorTextHeel"
        android:layout_below="@id/my_active_list"
        android:textSize="25dp"
        android:id="@+id/work"
        android:text=" - Work"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textColor="@color/colorTextHeel"
        android:layout_below="@id/work"
        android:textSize="25dp"
        android:text=" - Baby"/>

</RelativeLayout>
